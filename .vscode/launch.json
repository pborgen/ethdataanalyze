{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: cli.py - process",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args" : ["--process"]
        },
        {
            "name": "Python: cli.py - prependToFileName",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args" : ["--prependToFileName", "/mnt/crypto/export"]
        },
    ]
}